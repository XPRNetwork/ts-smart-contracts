{
  "name": "protonsc",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "build:token": "npx eosio-asc ./contracts/token/token.contract.ts",
    "build:balance": "npx eosio-asc ./contracts/balance/balance.contract.ts",
    "build:escrow": "npx eosio-asc ./contracts/escrow/escrow.contract.ts",
    "build:allow": "npx eosio-asc ./contracts/allow/allow.contract.ts",
    "build:kv": "npx eosio-asc ./contracts/kv/kv.contract.ts",
    "build:createnft": "npx eosio-asc ./contracts/createnft/createnft.contract.ts",
    "build:rng": "npx eosio-asc ./contracts/rng/rng.contract.ts",
    "build:txid": "npx eosio-asc ./contracts/txid/txid.contract.ts",
    "build:atomicassets": "npx eosio-asc ./contracts/atomicassets/atomicassets.contract.ts --debug --sourceMap --target release",
    "build": "run-p build:*",
    "test:token": "mocha -s 250 contracts/token/*.spec.ts -r ts-node/register",
    "test:balance": "mocha -s 250 contracts/balance/*.spec.ts -r ts-node/register",
    "test:allow": "mocha -s 250 contracts/allow/*.spec.ts -r ts-node/register",
    "test:escrow": "mocha -s 250 contracts/escrow/*.spec.ts -r ts-node/register",
    "test:createnft": "mocha -s 250 contracts/createnft/*.spec.ts -r ts-node/register",
    "test:kv": "mocha -s 250 contracts/kv/*.spec.ts -r ts-node/register",
    "test:rng": "mocha -s 250 contracts/rng/*.spec.ts -r ts-node/register",
    "test:txid": "mocha -s 250 contracts/txid/*.spec.ts -r ts-node/register",
    "test:atomicassets": "mocha -s 250 contracts/atomicassets/*.spec.ts -r ts-node/register",
    "test": "run-p test:*",
    "core:escrow": "cat ./contracts/escrow/target/escrow.contract.abi | abi2core > ./contracts/escrow/target/escrow.client-types.ts"
  },
  "dependencies": {
    "@proton/js": "^26.1.2",
    "as-chain": "^0.0.29",
    "cross-fetch": "^3.1.5",
    "crypto": "^1.0.1",
    "eosio-asc": "^0.2.70"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "engineStrict": true,
  "devDependencies": {
    "@greymass/abi2core": "^1.1.0",
    "@jafri/vert": "^0.1.45",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.22",
    "chai": "^4.3.6",
    "mocha": "^9.2.2",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  }
}
